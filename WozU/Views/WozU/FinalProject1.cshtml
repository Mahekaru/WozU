
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <title>FinalProject1</title>
    <link rel="stylesheet" href="~/Content/FinalProject1.css" />
</head>
<body id="body">
    <h1>Let's Create an ID card!</h1>
    
        <label>First Name:</label><br />
        <input type="text" id="firstName" placeholder="First Name" required /><br />

        <label>Last Name:</label><br />
        <input type="text" id="lastName" placeholder="Last Name" /><br />

        <label>Age:</label><br />
        <input type="text" id="age" placeholder="Age" /><br />

        <label>Phone Number:</label><br />
        <input type="text" id="phoneNumber" placeholder="Number" /><br />

        <label>Address:</label><br />
        <input type="text" id="address" placeholder="Address" /><br />
  
    <button type="button" onclick="idCard()">Get ID Card</button><br />

    <div id="idCard">
        <img id="img" src="http://www.iconninja.com/files/373/611/612/person-user-profile-male-man-avatar-account-icon.svg">
        <p id="postFullName"></p>
        <p id="postAge"></p>
        <p id="postPhoneNumber"></p>
        <p id="postAddress"></p>

    </div>

    <script src="~/Scripts/FinalProject1.js"></script>
</body>




</html>
